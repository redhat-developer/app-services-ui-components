{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "importHelpers": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationDir": "types",
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "target": "es2018",
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": ["src", "setupJest.ts"],
  "exclude": ["dist", "node_modules", "src/ProofOfConcepts"]
}
